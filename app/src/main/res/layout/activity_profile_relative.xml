<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileRelativeActivity">

    <!-- الشريط السفلي (Navigation Bar) -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:weightSum="4.2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            app:tint="@color/text_gray" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_notifications"
            app:tint="@color/text_gray" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_cart"
            app:tint="@color/text_gray" />


        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.2"
            android:backgroundTint="@color/main_green"
            android:text="@string/profile"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <!--محمد : لجعل محتوى الصفحة قابل للتمرير ليتوافق مع الاجهزة الصغيرة -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="50dp">
            
            <!--محمد: أزرار الهيدر -->
            <TextView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="←"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="✎"
                android:gravity="center"
                android:textColor="@color/main_green"
                android:textSize="24sp" />

            <!-- محمد :قسم البروفايل-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/btn_back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/man"
                    android:background="@color/light_gray"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Johan Smith"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="California, USA"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <!-- محمد :شريط الإحصائيات -->
            <LinearLayout
                android:id="@+id/ll_stats_bar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/tv_location"
                android:layout_marginTop="25dp"
                android:background="@color/main_green"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance"
                        android:textColor="#CCFFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00.00"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:background="#80FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orders"
                        android:textColor="#CCFFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:background="#80FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Spent"
                        android:textColor="#CCFFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000.0"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <!-- القائمة -->
            <!-- لاني لم اجد الايقونات المناسبة vector <- new عن طريق  drawable محمد: تم انشاؤ الايقونات في  -->
            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_stats_bar"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_person"
                    android:drawableTint="@color/main_green"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="Personal Information"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_cart"
                    android:drawableTint="@color/main_green"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="Your Order"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_thumb_up"
                    android:drawableTint="@color/main_green"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="Your Favourites"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_payment"
                    android:drawableTint="@color/main_green"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="Payment"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_heart"
                    android:drawableTint="@color/main_green"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="Recommended Shops"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_location"
                    android:drawableTint="@color/main_green"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="@string/nearest_shop"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_logout"
                    android:drawableTint="@color/text_gray"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="@string/logout"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>